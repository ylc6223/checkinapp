.date_box {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}
.date_box .calendar_date__box {
	width: calc(100% / 7);
	margin-top: 20rpx;
}
.calendar_date__box .calendar_date {
	text-align: center;
	margin: 0 auto;
	font-weight: bold;
	font-size: 28rpx;
	border-radius: 50%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	position: relative;
}
.calendar_date__box .calendar_date.isSelected {
	color: #FFFFFF !important;
}
.calendar_date .calendar_date__isToday {
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	border-radius: 50%;
	z-index: -1;
	opacity: 0.4;
}
.calendar_date .calendar_date__cricle {
	width: 9rpx;
	height: 9rpx;
	border-radius: 50%;
	margin-top: 5rpx;
	background-color: #FFFFFF;
}
/* 日历轮播 */

